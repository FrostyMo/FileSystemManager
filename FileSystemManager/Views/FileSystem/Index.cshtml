@{
    ViewData["Title"] = "File System";
}

<h1>File System</h1>

<div class="card mt-4">
    <div class="card-header">
        <h2>Directories</h2>
    </div>
    <div class="card-body">
        <ul class="list-group">
            @foreach (var directory in ViewBag.Directories)
            {
                <li class="list-group-item">@directory</li>
            }
        </ul>
        <a class="btn btn-primary mt-3" href="/FileSystem/CreateDirectory">Create New Directory</a>
    </div>
</div>

<div class="card mt-4">
    <div class="card-header">
        <h2>Files</h2>
    </div>
    <div class="card-body">
        <ul class="list-group">
            @foreach (var file in ViewBag.Files)
            {
                <li class="list-group-item">@file</li>
            }
        </ul>
        <a class="btn btn-primary mt-3" href="/FileSystem/UploadFile">Upload New File</a>
    </div>
</div>